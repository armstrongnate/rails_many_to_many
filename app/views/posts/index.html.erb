<h1>Posts</h1>

<div class='row'>
  <div class='col-md-7'>
    <% @posts.each do |post| %>
      <div class='post'>
        <h2><%= post.title %></h2>
        <hr>
        <div>
          <%= truncate(post.content, length: 200) %>
        </div>
        <% if post.tags.any? %>
          <div class='tags'>
            <strong>Tags:</strong>
            <% post.tags.each do |tag| %>
              <%= link_to tag do %>
                <span class='label label-default'><%= tag.name %></span>
              <% end %>
            <% end %>
          </div>
        <% end %>
      </div>
    <% end %>
  </div>
  <div class='col-md-5'>
    <%= link_to 'New Post', new_post_path, class: 'btn btn-warning pull-right' %>
  </div>
</div>
