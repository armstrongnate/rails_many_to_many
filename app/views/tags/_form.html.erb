<%= form_for @tag do |f| %>
  <div class='form-group'>
    <div class='col-md-8'>
      <%= f.label :name, class: 'form-label' %>
      <%= f.text_field :name, class: 'form-control' %>
    </div>
    <div class='col-md-4'>
      <%= f.submit 'Submit', class: 'btn btn-primary input-without-label' %>
    </div>
  </div>
<% end %>
